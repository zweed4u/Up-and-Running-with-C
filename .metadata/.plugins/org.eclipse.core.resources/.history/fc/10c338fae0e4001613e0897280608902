#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int array[]={11, 13, 17, 19};//datatype is what the array elements are
	int x;
	for(x=0;x<4;x++){
		printf("Element %d of array is: %d\n",x,array[x]);
	}

	//using a pointer
	int y;
	int *aptr;
	aptr=array; //no & needed for array or vars
	for(y=0;y<4;y++){
		printf("Element %d of array is: %d\n",y,*aptr);
		aptr++;
	}
	return EXIT_SUCCESS;
}
