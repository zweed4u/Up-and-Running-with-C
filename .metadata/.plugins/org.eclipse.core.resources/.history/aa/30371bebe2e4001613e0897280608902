#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char name[15];//14 letters and null
	printf("Type your name: ");
	scanf("%c",name);//& not needed because array
	printf("You typed: %s\n",name);
	return EXIT_SUCCESS;
}
