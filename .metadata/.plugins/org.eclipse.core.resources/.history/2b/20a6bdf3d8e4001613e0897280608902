#include <stdio.h>
#include <stdlib.h>

int main(void) {
	struct record{
		int account;
		float balance;
	};
	struct record my_bank;//vairbale of structure type
	my_bank.account=1234567789;
	my_bank.balance=12950.79;
	printf("In account %d I have $%.2f\n",my_bank.account,my_bank.balance);

	return EXIT_SUCCESS;
}
