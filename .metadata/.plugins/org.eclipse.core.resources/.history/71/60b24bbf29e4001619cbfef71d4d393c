#include <stdio.h>
#include <stdlib.h>

int main(void) {
	/*
	 * == is equal to
	 * < less than
	 * > greater than
	 * <= less than equal to
	 * >= greater than equal to
	 * != not equal to
	 */
//	int a;
//	int thresh=10;
//	printf("Type an integer: ");
//	scanf("%d",&a);
//	printf("You typed: %d\n",a);
//	if(a>thresh){
//		printf("%d is greater than %d\n",a,thresh);
//	}
//	else if(a<thresh){
//		printf("%d is less than %d\n",a,thresh);
//	}
//	else{
//		printf("%d is equal to %d\n",a,thresh);
//	}

	//while
	int x;
	x=1;
	while(x<=10){ //looping condition
		if (x%2==0){//only evens
			printf("%d\n",x);
		}
		x++;
	}
	//or
	int y=2;
	while(y<=10){
		printf("%d\n",y);
		y=y+2;
	}

	//count backwards
	int z=0;
	while(z<=10)

	//switch case structure
	char aa;
	printf("Your choice (A,B,C): ");
	scanf("%c",&aa);
	switch(aa){
		case 'A':
		case 'a':
			printf("Chose %c",aa);
			break; //will hit other cases as well if break is not included (execution falls through to each case)
		case 'B':
		case 'b':
			printf("Chose %c",aa);
			break;
		case 'C':
		case 'c':
			printf("Chose %c",aa);
			break;
		default:
			puts("That's not a valid choice");
	}

	return(0);
}
