#include <stdio.h>
#include <stdlib.h>

struct stats{//global variable (linked list needs to know vars)
		int account;
		float balance;
		struct stats *next;//pointer to another structure
};
struct stats *create(void);//prototype

int main(void) {

	struct stats *first;//pointer to stats structure
	int a=1;

	//create a new structure
	first=(struct stats *)malloc(sizeof(struct stats));//memory allocated for the structure
	if(first==NULL){
		puts("Memory Error");
		return(1);
	}
	//fill the structure
	first->account=a;
	printf("Account %05d\tenter the balance: $",first->account);
	scanf("%f",&first->balance);
	first->next=(struct stats *)malloc(sizeof(struct stats));
	if(first->next==NULL){
		puts("Memory Error");
		return(1);
	}

	//display the structure
	printf("Account %05d\tbalance: $%.2f\n",first->account,first->balance);

	return EXIT_SUCCESS;
}

//allocate storage for one new structure
struct stats *create(void){
	struct stats *baby;
	baby=(struct stats *)malloc(sizeof(struct stats));
	if(baby==NULL){
		puts("MEMORY ERROR");
		exit(1);
	}
	return baby;//location of allocated memory returned
}
