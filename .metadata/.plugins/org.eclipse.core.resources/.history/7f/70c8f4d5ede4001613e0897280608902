#include <stdio.h>
#include <stdlib.h>

int main(void) {
	struct stats{
		int account;
		float balance;
	};
	struct stats *first;//pointer to stats structure
	int a=1;

	//create a new structure
	first=(struct stats *)malloc(sizeof(struct stats));//memory allocated for the structure
	if(first==NULL){
		puts("Memory Error");
		return(1);
	}
	//fill the structure
	first->account=a;
	printf("Account %05d\tenter the balance: $",first->account);
	scanf("%f",&first->balance);

	//display the structure
	printf("Account %05d\tbalance: $%.2f\n",first->account,first->balance);

	return EXIT_SUCCESS;
}
