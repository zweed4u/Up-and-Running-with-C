#include <stdio.h>
#include <stdlib.h>
#define SIZE 1024
int main(void) {
	char *sto;
	char input[SIZE];
	printf("Type stuff to store in memory: ");
	fgets(input,SIZE,stdin);

	sto=(char *)malloc(sizeof(char)*SIZE);
	if(sto==NULL){
		puts("MEMORY ERROR");
		return(1);
	}
	else{
		printf("%d bytes of memory allocated at location %p.\n",SIZE,sto);
	}
	return EXIT_SUCCESS;
}
